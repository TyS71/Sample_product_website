<% include partials/header %>

<h1><%=place.name%> Edit Page</h1>

<div class="form-div">
	<form class="ui form" action="/secondpage/<%=place.id%>?_method=PUT" method="POST">
	  <div class="field">
	    <label>Place Name</label>
	    <input type="text" value='<%=place.name%>' name="place[name]" required>
	  </div>
	  <div class="field">
	    <label>Description</label>
	    <input type="text" value="<%=place.description %>" name="place[description]" required>
	  </div>
	  <div id="price-field"class="field">
	    <label>Price</label>
	    <input type="Number" value="<%=place.price%>" name="place[price]" step="0.01">
	  </div>
	  <button class="ui button" type="submit">Submit</button>
	</form>
</div>


<% include partials/footer %>